<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="https://www.google.com/search?q=http://openbox.org/3.4/menu">

<!-- This file defines the right-click menu for the Openbox desktop. -->

<menu id="root-menu" label="Openbox 3">
<item label="Terminal">
<action name="Execute">
<execute>xterm</execute>
</action>
</item>
<item label="Google Chrome">
<action name="Execute">
<!-- The --no-sandbox flag is a common requirement for running Chrome -->
<!-- inside containerized environments like Docker. -->
<execute>google-chrome-stable --no-sandbox</execute>
</action>
</item>
<separator/>
<menu id="Exit" label="Exit">
<item label="Logout">
<action name="Exit"/>
</item>
</menu>
</menu>
</openbox_menu>
